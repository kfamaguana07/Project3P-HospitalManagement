@{
    ViewData["Title"] = "Tratamiento";
    var userRoles = string.Join(",", User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).Select(c => c.Value));
}

<h1 class="display-6 text-primary text-center fw-bold">Tratamientos</h1>

<br />

<button type="button" class="btn btn-success" id="btnNuevoTratamiento" data-bs-toggle="modal" onclick="MostrarModal()">
    Nuevo Tratamiento
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewBox="0 0 16 16">
        <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0" />
    </svg>
</button>

<br />
<br />

<div class="card shadow">
    <div class="card-header text-white" style="background-color: #60a5fa;">
        <h5 class="mb-0">Lista de Tratamientos</h5>
    </div>
    <div class="card-body">
        <div id="divContenedorTabla" class="table table-striped"></div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalTratamiento" tabindex="-1" aria-labelledby="modalTratamientoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTratamientoLabel">Gestionar Tratamiento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frmTratamiento" method="post" class="row g-3">
                    <div class="col-md-6">
                        <label for="inputIdTratamiento" class="form-label">Id Tratamiento</label>
                        <input type="text" class="form-control shadow-sm rounded" name="idTratamiento" id="idTratamiento" readonly>
                    </div>

                    <div class="col-md-6">
                        <label for="cboPaciente" class="form-label">Paciente</label>
                        <select class="form-control shadow-sm rounded" name="idPaciente" id="idPaciente">
                            <option value=''>Seleccione un paciente</option>
                            <!-- Opciones dinámicas aquí -->
                        </select>
                        <div class="invalid-feedback">Por favor, seleccione un paciente.</div>
                    </div>
                    <div class="col-md-6">
                        <label for="inputDescripcion" class="form-label">Descripcion</label>
                        <input type="text" class="form-control shadow-sm rounded" name="descripcion" id="descripcion">
                        <div class="invalid-feedback">Por favor, ingrese la direccion.</div>
                    </div>

                    <div class="col-md-6">
                        <label for="inputFechaHora" class="form-label">Fecha</label>
                        <input type="date" class="form-control shadow-sm rounded" name="fecha" id="fecha">
                        <div class="invalid-feedback">Por favor, ingrese la fecha</div>
                    </div>
                    <div class="col-md-6">
                        <label for="inputCosto" class="form-label">Costo</label>
                        <input type="number" class="form-control shadow-sm rounded" name="costo" id="costo">
                        <div class="invalid-feedback">Por favor, ingrese un costo valido.</div>
                    </div>
                    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="GuardarTratamiento()">Guardar</button>
                <button type="button" class="btn btn-secondary" onclick="LimpiarTratamiento()">Limpiar</button>
            </div>
        </div>
    </div>
</div>

<script>
    var userRoles = "@userRoles";
</script>

<script src="~/js/generic.js"></script>
<script src="~/js/tratamiento.js"></script>