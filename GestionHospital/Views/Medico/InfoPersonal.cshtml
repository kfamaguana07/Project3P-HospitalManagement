@{
    ViewData["Title"] = "Informacion Personal Doctor";
    var userRoles = string.Join(",", User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).Select(c => c.Value));
}

<style>
    /* Asegúrate de que el contenedor ocupe toda la pantalla */
    #divInfoMedico {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 70vh;
        background-image: url('/img/login.jpg'); /* Cambia la ruta */
        background-size: cover;
        background-position: center;
    }

    /* Estilos de la tarjeta */
    .login-card {
        background: linear-gradient(to bottom, rgba(30, 60, 114, 0.85), rgba(42, 82, 152, 0.10)); /* Degradado azul oscuro semi-opaco */
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        width: 100%;
        width: 600px; /* Tamaño máximo de la tarjeta */
        color: white; /* Para mejorar la visibilidad del texto */
        backdrop-filter: blur(5px); /* Agrega un leve desenfoque */
    }

    /* Títulos centrados y color blanco */
    .text-primary {
        color: white !important;
    }

    /* Estilo de los detalles (nombre, apellido, etc.) */
    .card-body p {
        font-size: 1.1rem;
        margin-bottom: 1rem;
    }

    /* Iconos dentro de los campos de entrada (si los añades más adelante) */
    .input-group-icon {
        background: #007bff;
        color: white;
        padding: 10px;
        border-radius: 10px 0 0 10px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Estilo para los campos de texto */
    .form-control {
        border-radius: 0 10px 10px 0 !important;
        border: 1px solid #ced4da;
        padding: 10px;
        width: 100%;
    }

    /* Estilo del botón (si se agrega más adelante) */
    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px;
        border-radius: 10px;
        color: white;
        font-size: 16px;
        cursor: pointer;
        display: block;
        width: 100%;
    }

        /* Hover del botón */
        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>

<div class="container mt-5" id="divInfoMedico">
    <div class="row">
        <!-- Aquí irán los detalles -->
        <div class="col-md-6">
            <div class="card login-card">
                <div class="card-body">
                    <h3 class="text-primary">Detalles del Doctor</h3> <br /><br />
                    <p><strong>Nombre:</strong> <span id="nombre">Cargando...</span></p>
                    <p><strong>Apellido:</strong> <span id="apellido">Cargando...</span></p>
                    <p><strong>Teléfono:</strong> <span id="telefono">Cargando...</span></p>
                    <p><strong>Email:</strong> <span id="email">Cargando...</span></p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var userRoles = "@userRoles";
</script>
<script src="~/js/generic.js"></script>
<script src="~/js/medico.js"></script>
