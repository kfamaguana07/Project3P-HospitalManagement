@{
    ViewData["Title"] = "Médico";
    var userRoles = string.Join(",", User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role).Select(c => c.Value));
}

<h1 class="display-6 text-primary text-center fw-bold">Médicos</h1>

<br />

<button type="button" class="btn btn-success" id="btnNuevoMedico" data-bs-toggle="modal" onclick="MostrarModal()">
    Nuevo Médico
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-earmark-plus-fill" viewBox="0 0 16 16">
        <path d="M9.293 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V4.707A1 1 0 0 0 13.707 4L10 .293A1 1 0 0 0 9.293 0M9.5 3.5v-2l3 3h-2a1 1 0 0 1-1-1M8.5 7v1.5H10a.5.5 0 0 1 0 1H8.5V11a.5.5 0 0 1-1 0V9.5H6a.5.5 0 0 1 0-1h1.5V7a.5.5 0 0 1 1 0" />
    </svg>
</button>

<br />
<br />

<div class="card shadow">
    <div class="card-header text-white" style="background-color: #60a5fa;">
        <h5 class="mb-0">Lista de Médicos</h5>
    </div>
    <div class="card-body">
        <div id="divContenedorTabla" class="table table-striped"></div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modalMedico" tabindex="-1" aria-labelledby="modalMedicoLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalMedicoLabel">Gestionar Médico</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frmMedico" method="post" class="row g-3">
                    <div class="col-md-6">
                        <label for="inputIdMedico" class="form-label">Id Médico</label>
                        <input type="text" class="form-control shadow-sm rounded" name="idMedico" id="idMedico" readonly>
                    </div>
                    <div class="col-md-6">
                        <label for="inputNombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control shadow-sm rounded" name="nombre" id="nombre">
                        <div class="invalid-feedback">Por favor, ingrese el nombre.</div>
                    </div>
                    <div class="col-md-6">
                        <label for="inputApellido" class="form-label">Apellido</label>
                        <input type="text" class="form-control shadow-sm rounded" name="apellido" id="apellido">
                        <div class="invalid-feedback">Por favor, ingrese el apellido.</div>
                    </div>
                    <div class="col-md-6">
                        <label for="inputTelefono" class="form-label">Teléfono</label>
                        <input type="text" class="form-control shadow-sm rounded" name="telefono" id="telefono">
                        <div class="invalid-feedback">Por favor, ingrese el teléfono.</div>
                    </div>
                    <div class="col-md-6">
                        <label for="inputEmail" class="form-label">Email</label>
                        <input type="email" class="form-control shadow-sm rounded" name="email" id="email">
                        <div class="invalid-feedback">Por favor, ingrese el email.</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="GuardarMedico()">Guardar</button>
                <button type="button" class="btn btn-secondary" onclick="LimpiarMedico()">Limpiar</button>
            </div>
        </div>
    </div>
</div>

<script>
    var userRoles = "@userRoles";
</script>

<script src="~/js/generic.js"></script>
<script src="~/js/medico.js"></script>