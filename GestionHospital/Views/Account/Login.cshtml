@model GestionHospital.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesion";
}

<link href="~/css/login.css" rel="stylesheet" />

<div class="login-container">
    <div class="login-card">
        <h2 class="text-center text-primary">Iniciar Sesión</h2>
        <form asp-action="Login" method="post">
            <!-- Campo de Email con ícono -->
            <div class="form-group mt-3">
                <label asp-for="Email" class="fw-bold">Correo Electrónico</label>
                <div class="input-group">
                    <span class="input-group-icon">
                        <i class="fas fa-envelope"></i>
                    </span>
                    <input asp-for="Email" class="form-control" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <!-- Campo de Password con ícono -->
            <div class="form-group mt-3">
                <label asp-for="Password" class="fw-bold">Contraseña</label>
                <div class="input-group">
                    <span class="input-group-icon">
                        <i class="fas fa-lock"></i>
                    </span>
                    <input asp-for="Password" class="form-control" type="password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Checkbox Remember Me -->
            <div class="form-group form-check mt-3">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">Recordarme</label>
            </div>

            <!-- Botón de Login -->
            <button type="submit" class="btn btn-primary w-100 mt-4">
                <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
            </button>

            <!-- Link to Register -->
            <div class="text-center mt-3">
                <a asp-action="Register" asp-controller="Account">¿No tienes una cuenta? Regístrate</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}